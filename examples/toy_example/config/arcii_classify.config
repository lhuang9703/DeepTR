{
  "net_name": "ARCII",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/toy_example/weights/arcii_classify.weights",
      "save_weights_iters": 10,
      "num_iters": 10,
      "display_interval": 10,
      "test_weights_iters": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/toy_example/classification/corpus_preprocessed.txt",
        "text2_corpus": "./data/toy_example/classification/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 50,
        "vocab_size": 3165,
        "train_embed": false,
        "target_mode": "classification",
        "class_num": 2,
        "text1_maxlen": 20,
        "text2_maxlen": 500
    },
    "train": {
        "input_type": "PointGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/toy_example/classification/relation_train.txt"
    },
    "valid": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 10,
        "relation_file": "./data/toy_example/classification/relation_train.txt"
    },
    "test": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 10,
        "relation_file": "./data/toy_example/classification/relation_test.txt"
    },
    "predict": {
        "input_type": "PointGenerator", 
        "phase": "PREDICT",
        "batch_size": 10,
        "relation_file": "./data/toy_example/classification/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.arcii_classify.txt"
    }
  },
  "model": {
    "model_path": "matchzoo/models/",
    "model_py": "arcii.ARCII",
    "setting": {
        "1d_kernel_count": 4,
        "1d_kernel_size": 3,
        "num_conv2d_layers": 1,
        "2d_kernel_counts": [4, 3],
        "2d_kernel_sizes": [[3, 3], [2, 2]],
        "2d_mpool_sizes": [[3, 3], [2, 2]],
        "dropout_rate": 0
    }
  },
  "losses": [ 
    {
       "object_name": "categorical_crossentropy",
       "object_params": {
       }
    }
  ],
  "metrics": [ "accuracy" ]
}

