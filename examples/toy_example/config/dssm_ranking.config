{
  "net_name": "dssm",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/toy_example/weights/dssm_ranking.weights",
      "save_weights_iters": 10,
      "num_iters": 10,
      "display_interval": 10,
      "test_weights_iters": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/toy_example/ranking/corpus_preprocessed.txt",
        "text2_corpus": "./data/toy_example/ranking/corpus_preprocessed.txt",
        "word_triletter_map_file": "./data/toy_example/ranking/word_triletter_map.txt",
        "target_mode": "ranking",
        "vocab_size": 3484,
        "embed_size": 10
    },
    "train": {
        "input_type": "Triletter_PairGenerator", 
        "dtype": "dssm",
        "phase": "TRAIN",
        "use_iter": true,
        "query_per_iter": 3,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/toy_example/ranking/relation_train.txt"
    },
    "valid": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/toy_example/ranking/relation_valid.txt"
    },
    "test": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/toy_example/ranking/relation_test.txt"
    },
    "predict": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/toy_example/ranking/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.dssm_ranking.txt"
    }
  },
  "model": {
    "model_path": "matchzoo/models/",
    "model_py": "dssm.DSSM",
    "setting": {
        "hidden_sizes": [100, 30],
        "dropout_rate": 0.5
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

