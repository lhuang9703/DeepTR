{
  "net_name": "MVLSTM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/bioasq/weights/mvlstm.bioasq.weights",
      "save_weights_iters": 10,
      "num_iters": 2000,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adagrad",
      "learning_rate": 0.01
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/bioasq/corpus_preprocessed.txt",
        "text2_corpus": "./data/bioasq/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 200,
        "embed_path": "./data/bioasq/embed_bioasq_d200",
        "vocab_size": 205878,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": 40
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 128,
        "relation_file": "./data/bioasq/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/bioasq/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/bioasq/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/bioasq/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.mvlstm.bioasq.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "mvlstm.MVLSTM",
    "setting": {
        "hidden_size": 50,
        "topk": 100,
        "dropout_rate": 0.5
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@10", "map"]
}

